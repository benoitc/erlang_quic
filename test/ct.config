%% -*- erlang -*-
%%
%% Common Test configuration for QUIC E2E tests
%%

[
    %% Default QUIC server configuration (can be overridden by environment variables)
    {quic_server_host, "127.0.0.1"},
    {quic_server_port, 4433},

    %% Multi-server configuration for interop tests
    %% Format: {name, host, port, features}
    %% Features is a list of supported test features
    {quic_servers, [
        {aioquic, "127.0.0.1", 4433, [handshake, streams, retry, zero_rtt]},
        {quic_go, "127.0.0.1", 4434, [handshake, streams]}
    ]},

    %% Environment variable overrides (checked at runtime)
    %% QUIC_AIOQUIC_HOST, QUIC_AIOQUIC_PORT
    %% QUIC_QUICGO_HOST, QUIC_QUICGO_PORT

    %% Test timeout settings
    {handshake_timeout, 5000},
    {stream_timeout, 10000},

    %% ALPN for testing
    {alpn, ["hq-interop", "h3"]}
].
